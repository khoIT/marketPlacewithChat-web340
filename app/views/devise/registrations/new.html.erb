<div id="wrapper">
  <!--SLIDE-IN ICONS-->
  <div class="user-icon"></div>
  <div class="passSignup-icon"></div>
  <div class="email-icon"></div>
  <div class="passconfirm-icon"></div>
  <%= form_for(resource, html:{class:'login-form'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="header">
      <!--TITLE--><h1>Signup</h1><!--END TITLE-->
    <!--DESCRIPTION--><span>Howdy, fellow trader!<br>Please create an account to explore tBay.</span><!--END DESCRIPTION-->
    </div>
    <div class="content">
      <%= f.text_field :name, autofocus: true, placeholder:"First Name", class:"input username" %>
      <%= f.email_field :email, autofocus: false, placeholder:"Email", class:"input email" %>

      <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class:"input password" %>
      <% if @validatable %>
        <div style="color:gray"><em>(<%= @minimum_password_length %> characters minimum)</em></div>
      <% end %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation", class:"input password-confirm" %>
    </div>

    <div class="footer">
      <%= f.submit "Sign up", class:"button" %>
      <div class="register"><%= render "devise/shared/links" %></div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $(".username").focus(function() {
    $(".user-icon").css("left","-48px");
  });
  $(".username").blur(function() {
    $(".user-icon").css("left","0px");
  });

  $(".email").focus(function() {
    $(".email-icon").css("left","-48px");
  });
  $(".email").blur(function() {
    $(".email-icon").css("left","0px");
  });

  $(".password").focus(function() {
    $(".passSignup-icon").css("left","-48px");
  });
  $(".password").blur(function() {
    $(".passSignup-icon").css("left","0px");
  });
  $(".password-confirm").focus(function() {
    $(".passconfirm-icon").css("left","-48px");
  });
  $(".password-confirm").blur(function() {
    $(".passconfirm-icon").css("left","0px");
  });
});
</script>
