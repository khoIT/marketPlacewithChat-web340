<title>Market Place</title>
<body>
  <div class="hero-unit">
      <h1>T-Bay</h1>
      <p>Here, you can find anything</p>
  </div>
  <hr>
  <div class="row-fluid">
    <div style="display:block">
      <h4><a>Category</a></h4>
    </div>
    <div id="category-wall" class="well">
    <% @categories.each do |cat| %>
      <a class="btn btn-default" href="<%= cat.id %>">
        <%= cat.name %>
      </a>
    <% end %>
    </div>
  </div>

  <div class="row-fluid">
    <div style="display:block">
      <button class="btn btn-success" type="button">
          Top Products! <span class="badge">5</span>
      </button>
    </div>
    <% @top_view.each do |product| %>
      <div class="top-products">
          <%= link_to image_tag(product.img_url), product_path(product)%>
        <br>
        Title: <%= product.name %><br>
        Price: $<%= product.price %><br>
        Category: <%= Category.find_by_id(product.category).name %><br>
      </div>

    <% end %>
  </div>
  <hr>

  <div class="row-fluid" ng-controller="MainCtrl">
    <div class="btn-group">
        <button class="btn btn-primary" ng-click="add()">More products!</button>
        <button class="btn btn-default" ng-click="clear()">Something else</button>
        <button class="btn btn-default" ng-click="restart()">Start again</button>
    </div>
    <ul class="panel" scroller>
      <div masonry>
        <li data-ng-repeat="photo in photos" class="masonry-photo" >
          <a ng-href="products/{{photo.id}}">
            <img ng-src="{{ photo.url }}" alt="A masonry brick">
          </a>
        </li>
      </div>
    </ul>
  </div>
</body>

